<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_two"/>
            </LinearLayout>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/user_profile"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:elevation="@dimen/_10sdp"
                android:src="@drawable/user_default"/>
            <LinearLayout
                android:id="@+id/bottom"
                android:background="@color/grey_5"
                android:layout_below="@id/top"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_50sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dfdf"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textMedium14x" />

                <TextView
                    android:id="@+id/tv_company_name"
                    android:textColorLink="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="asddsfd"
                    android:textStyle="bold"
                    android:padding="@dimen/_1sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textMedium12x" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cat"
                        android:textStyle="bold"
                        android:textColor="@color/colorthemeblue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textStyle="bold"
                        android:textColor="@color/colorthemeblue"/>
                    <TextView
                        android:id="@+id/txt_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="subcat"
                        android:textStyle="bold"
                        android:textColor="@color/colorthemegrey"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_city_area"
                    android:textColorLink="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="asddsfd"
                    android:padding="@dimen/_1sdp"
                    android:textColor="@color/grey_60"
                    android:textSize="@dimen/textMedium12x" />


                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                  <Button
                      android:id="@+id/btn_chat"
                      android:background="@drawable/primary_button"
                      android:layout_width="@dimen/_80sdp"
                      android:layout_height="@dimen/_25sdp"
                      android:textColor="@color/white"
                      android:textSize="@dimen/textSmall10x"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:text="Message"/>

                    <Button
                        android:id="@+id/btn_follow"
                        android:layout_width="@dimen/_80sdp"
                        android:textSize="@dimen/textSmall10x"
                        android:layout_height="@dimen/_25sdp"
                        android:textColor="@color/colorthemegrey"
                        android:background="@drawable/border_black"
                        android:text="UnFollow" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_7sdp"
                    android:layout_below="@id/view4"
                    android:background="@color/colorthemegrey" />
                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_8sdp"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorthemeblue" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

