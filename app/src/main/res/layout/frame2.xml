<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linLayMain"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_310sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgbanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_310sdp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|center"
            android:background="@drawable/frame_two"
            android:scaleType="fitXY" />

        <FrameLayout
            android:id="@+id/framelayout1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_310sdp">

            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="start|top"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/zoo_biz_new" />

            <ImageView
                android:id="@+id/companyLogo"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="end|top"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/zoo_biz_new" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgbanner"
                android:layout_marginTop="@dimen/_272sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center_vertical"
                        android:maxLength="100"
                        android:singleLine="true"
                        android:text="Name : Parth Jadav"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMobileNo"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="Mobile No.: +91 90993 60078"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:text="Email ID: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>