<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cricle_white_border">

    <ImageView
        android:id="@+id/iv_keyboard_icon"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_4sdp"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/emoji"
        android:tag="0"
        android:visibility="gone" />

    <com.example.safalcrm.utillity.NoGifEditText
        android:id="@+id/et_msg_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_toLeftOf="@id/imgAttachment"
        android:layout_toRightOf="@id/iv_keyboard_icon"
        android:background="@drawable/cricle_white_border"
        android:clickable="true"
        android:enabled="true"
        android:focusedByDefault="false"
        android:gravity="center_vertical"
        android:hint="Type Message"
        android:imeOptions="actionSend|flagNoEnterAction"
        android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
        android:maxHeight="@dimen/_80sdp"
        android:maxLength="1000"
        android:maxLines="5"
        android:minHeight="@dimen/_40sdp"
        android:paddingLeft="@dimen/_6sdp"
        android:paddingTop="@dimen/_4sdp"
        android:paddingRight="@dimen/_6sdp"
        android:paddingBottom="@dimen/_6sdp" />

    <ImageView
        android:id="@+id/imgAttachment"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:rotation="-45"
        android:src="@drawable/ic_attach_file"
        android:tint="@color/colorPrimary"
        android:visibility="visible" />


</RelativeLayout>