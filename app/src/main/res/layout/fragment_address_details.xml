<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.Registration.BasicDetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field_title"
                    android:padding="@dimen/_5sdp"
                    android:text="Address *"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_7sdp"
                            android:src="@drawable/ic_company_address"
                            app:tint="@color/grey_40" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_40" />

                        <EditText
                            android:id="@+id/editAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:inputType="textCapSentences"
                            android:maxLength="200"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field_title"
                    android:padding="@dimen/_5sdp"
                    android:text="Country *"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_7sdp"
                            android:src="@drawable/ic_country"
                            app:tint="@color/grey_40" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_40" />

                        <RelativeLayout
                            android:id="@+id/rlCountry"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvCountry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@id/view1"
                                android:background="@android:color/transparent"
                                android:gravity="center|left"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="Select Category"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/iv1"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="@dimen/_7sdp"
                                android:src="@drawable/down_arrow"
                                app:tint="@color/grey_40" />

                            <View
                                android:id="@+id/view1"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@id/iv1"
                                android:background="@color/grey_40" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field_title"
                    android:padding="@dimen/_5sdp"
                    android:text="State *"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_7sdp"
                            android:src="@drawable/state"
                            app:tint="@color/grey_40" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_40" />

                        <RelativeLayout
                            android:id="@+id/rlState"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvState"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@id/view2"
                                android:background="@android:color/transparent"
                                android:gravity="center|left"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="Select State"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/iv2"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="@dimen/_7sdp"
                                android:src="@drawable/down_arrow"
                                app:tint="@color/grey_40" />

                            <View
                                android:id="@+id/view2"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@id/iv2"
                                android:background="@color/grey_40" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field_title"
                    android:padding="@dimen/_5sdp"
                    android:text="City *"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_7sdp"
                            android:src="@drawable/ic_city"
                            app:tint="@color/grey_40" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_40" />

                        <RelativeLayout
                            android:id="@+id/rlCity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvCity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@id/view3"
                                android:background="@android:color/transparent"
                                android:gravity="center|left"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="Select City"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/iv3"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="@dimen/_7sdp"
                                android:src="@drawable/down_arrow"
                                app:tint="@color/grey_40" />

                            <View
                                android:id="@+id/view3"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@id/iv3"
                                android:background="@color/grey_40" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field_title"
                    android:padding="@dimen/_5sdp"
                    android:text="Area *"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_7sdp"
                            android:src="@drawable/ic_city"
                            app:tint="@color/grey_40" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_40" />

                        <RelativeLayout
                            android:id="@+id/rlArea"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tvArea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@id/view4"
                                android:background="@android:color/transparent"
                                android:gravity="center|left"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:text="Select Area"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp" />

                            <ImageView
                                android:id="@+id/iv4"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="@dimen/_7sdp"
                                android:src="@drawable/down_arrow"
                                app:tint="@color/grey_40" />

                            <View
                                android:id="@+id/view4"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_toStartOf="@id/iv4"
                                android:background="@color/grey_40" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field_title"
                    android:padding="@dimen/_5sdp"
                    android:text="Pincode *"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_7sdp"
                            android:src="@drawable/ic_pincode"
                            android:tintMode="src_in"
                            app:tint="@color/grey_40" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_40" />

                        <EditText
                            android:id="@+id/editPincode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_title"
                        android:padding="@dimen/_5sdp"
                        android:text="Google Location *"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvSelectLatLong"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_title"
                        android:padding="@dimen/_5sdp"
                        android:text="Select From Map"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_registration_field"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_registration_field_border"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_margin="@dimen/_7sdp"
                            android:src="@drawable/card_one_location"
                            android:tintMode="src_in"
                            app:tint="@color/grey_40" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="@color/grey_40" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="2.01">

                            <EditText
                                android:id="@+id/editLatitude"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:hint="Latitude"
                                android:inputType="number"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:singleLine="true" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.01"
                                android:background="@color/grey_40" />

                            <EditText
                                android:id="@+id/editLongitude"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:ellipsize="end"
                                android:hint="Longitude"
                                android:inputType="number"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:singleLine="true" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>