<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerVertical="true"
            android:background="@drawable/white_bg_profile"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_company_address"
            android:tint="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_addressTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Address"
                android:textStyle="bold"
                android:textColor="@color/grey_80"
                android:textSize="@dimen/textMedium12x" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1st Floor dskdjsaklj clcsd \n ahmedabad"
                android:textColor="@color/grey_60"
                android:textSize="@dimen/textMedium12x" />

            <TextView
                android:id="@+id/tvAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1st Floor dskdjsaklj clcsd \n ahmedabad"
                android:textColor="@color/grey_60"
                android:textSize="@dimen/textMedium12x" />


            <LinearLayout
                android:id="@+id/lyt_click"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    android:id="@+id/txt_edit"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawableTint="@color/white"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Edit"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_corner"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_7sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/txt_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/bg_corner"
                    android:drawableLeft="@drawable/ic_delete_red_24dp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/white"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Delete"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_direct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableLeft="@drawable/ic_navigation"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="Direction"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_corner"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_7sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:background="@color/grey_10" />

</LinearLayout>